<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imgTonyStark"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="20dp"
        android:src="@drawable/tony_stark_new"/>
    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tony Stark"
        android:textSize="30sp"
        android:layout_toRightOf="@id/imgTonyStark"
        android:textStyle="bold"
        android:textColor="#00897b"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tony@stark.com"
        android:textSize="15sp"
        android:layout_toRightOf="@id/imgTonyStark"
        android:layout_below="@id/txtName"
        android:textColor="#00897b"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/txtPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+91 1234567890"
        android:textSize="15sp"
        android:layout_toRightOf="@id/imgTonyStark"
        android:layout_below="@id/txtEmail"
        android:textColor="#00897b"
        android:layout_marginTop="10dp"/>
    <Button
        android:id="@+id/btnMoreInfo"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="More Information"
        android:textColor="#00897b"
        android:layout_below="@id/txtPhone"
        android:layout_marginTop="80dp"
        android:background="#cddc39"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hehe"
        android:layout_centerInParent="true"
        android:textColor="#00bfa5"
        android:background="#1a237e"
        android:textSize="50sp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnExitApp"
        android:textSize="20sp"
        android:text="Exit the App"
        android:textColor="#000000"
        android:layout_alignParentBottom="true"
        android:background="#f44336"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="report"
        android:textSize="20sp"
        android:textColor="#ff5722"
        android:background="#c6ff00"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/btnExitApp"
        android:layout_marginLeft="105dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"/>
</RelativeLayout>